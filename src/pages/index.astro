<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <!-- IMG: Banner Section Content -->

    <div class="banner-image">
      <img src="bgimg.jpeg" alt="Background Image" />
