  <style>
    /* Modern Web Design Standards */
    @import url("https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap");

    :root {
      --color-primary: #d97706;
      --color-bg: #fff8f1;
      --color-text: #374151;
      --color-card-bg: #ffffff;
      --color-shadow: rgba(0, 0, 0, 0.1);
      --border-radius: 0px;
      --gap: 32px;
    }

    * {
      box-sizing: border-box;
    }

    .banner {
      width: 100%;
      max-width: 1500px;
      margin: 4rem auto 0;
      background: linear-gradient(135deg, #a00303, #001642);
      color: #ffffff;
      text-align: center;
      padding: 48px 24px;
      border-radius: 16px;
      box-shadow: 0 8px 24px rgba(217, 119, 6, 0.4);
      user-select: none;
    }
    .banner h1 {
      font-weight: 700;
      font-size: clamp(2rem, 2vw, 2rem);
      line-height: 1.2;
      letter-spacing: 0.05em;
      text-shadow: 0 2px 6px rgba(0, 0, 0, 0.35);
    }

    h2 {
      font-weight: 700;
      font-size: 2.5rem;
      margin-bottom: var(--gap);
      max-width: 600px;
      text-align: center;
    }

    .popular-menu {
      max-width: 1200px;

      margin: 2rem auto;
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: var(--gap);
    }

    .menu-card {
      /* background: var(--color-card-bg); */
      /* border-radius: var(--border-radius); */
      box-shadow: 0 8px 16px var(--color-shadow);
      overflow: hidden;
      display: flex;
      flex-direction: column;
      transition:
        transform 0.3s ease,
        box-shadow 0.3s ease;
    }
    .menu-image {
      width: 100%;
      aspect-ratio: 4 / 3;
      object-fit: cover;
      display: block;
    }

    #popular-menu-title {
      text-align: center;
      margin-bottom: 1rem;
      font-size: 2.5rem;
      color: #b01c2e;
    }

    .catering-event {
      /* background-color: #5d0000; */
      /* padding: 2rem; */
      /* background-color: #f9f9f9;
    border: 2px solid #d80606; */
      margin-top: 2rem;
    }
    .catering-event h2 {
      color: #cdd0cd;
      margin-bottom: 1rem;
    }
    .catering-event .content {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 1.5rem;
    }
    .catering-event img {
      max-width: 100%;
      height: auto;
      border-radius: 8px;
      /* border: 1px solid #ccc; */
    }
    .catering-event .text {
      flex: 1;
      font-size: 1.1rem;
      color: #333;
    }
    .catering-event .button {
      display: inline-block;
      margin-top: 1rem;
      padding: 0.5rem 1rem;
      background-color: #d80606;
      color: white;
      text-decoration: none;
      border-radius: 4px;
    }
    .catering-event .button:hover {
      background-color: #a00404;
    }
    @media (max-width: 640px) {
      .banner {
        padding: 32px 16px;
        border-radius: 12px;
      }
      .banner h1 {
        font-size: 2.5rem;
      }
    }
  </style>
</section>
