---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";

import { Image } from "astro:assets";


const revOne="Grant Cohn posted a video of him eating here. I had to check it out. I had a carnitas torta ahogada.";
const revTwo="Delicious tortas ahogadas! Fast service. Very clean place. This was my second time. I will come again!";
const revTres="Tuve unos tacos dorados de carnitas con papa, realmente la disfruté. ¡Qué delicia!"
const revCuatro="Muy muy buenas las tortas y me imagino que todo lo demás también. 100% recomendado!";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
     <Header />
    <!-- IMG: Banner Section Content -->

    <div class="banner-image">
      <img src="bgimg.jpeg" alt="Background Image" />
      <div class="banner-overlay"></div>
      <div class="banner-text">
        <h1>Tortas Ahogadas Mi Barrio</h1>
        <p>Estilo Jalisco!</p>
    </div>
    </div>
  </head>
  
  <body>
   




    <main>
    


      <!-- Menu Slideshow Section -->
      <section>
        <div>
          <!-- Slide: 2x-seconds</p> -->

          <div class="slideshow-container">
            <div class="mySlides fade">
              <img src="torta.JPG" style="width: 100%;" />

              <!-- <div class="text">TORTAS AHOGADAS</div> -->
            </div>

            <div class="mySlides fade">
              <img src="image7.jpeg" style="width:100%" />

              <!-- <div class="text">Tacos De Papa Con Buche</div> -->
            </div>

            <div class="mySlides fade">
              <img src="trestacos.jpeg" style="width:100%" />

              <div class="text">CEVICHE</div>
            </div>
          </div>

          <!-- Slides Buttons</p> -->

          <div style="text-align:center">
            <span class="dot"></span>

            <span class="dot"></span>

            <span class="dot"></span>
          </div>
        </div>
      </section>
<section>
  <h2>Best Reviews</h2>
   <div class="container" role="list">
    <article class="card" role="listitem" tabindex="0" aria-label="Review by Alice">
      <div class="reviewer-name">Fred</div>
      <p class="review-text">{revOne}</p>
      <div class="rating" aria-label="4 out of 5 stars">★★★★☆</div>
    </article>
    <article class="card" role="listitem" tabindex="0" aria-label="Review by Jason Lee">
      <div class="reviewer-name">Pia</div>
      <p class="review-text">{revTwo}</p>
      <div class="rating" aria-label="5 out of 5 stars">★★★★★</div>
    </article>
    <article class="card" role="listitem" tabindex="0" aria-label="Review by Maria Gonzalez">
      <div class="reviewer-name">Mariana</div>
      <p class="review-text">{revTres}</p>
      <div class="rating" aria-label="3 out of 5 stars">★★★☆☆</div>
    </article>
     <article class="card" role="listitem" tabindex="0" aria-label="Review by Maria Gonzalez">
      <div class="reviewer-name">Miguel</div>
      <p class="review-text">{revCuatro}</p>
      <div class="rating" aria-label="3 out of 5 stars">★★★☆☆</div>
    </article>
</section>
      <section>
        

        <div class="title-underline"></div>

       
        <div class="view-more-button">
          <a
            href="https://www.yelp.com/biz/tortas-ahogadas-mi-barrio-oakland"
            class="button">VIEW MORE</a
          >
      </section>
    </main>
    <!-- Footer Component-->
    <Footer />
    <style>

      
    </style>
    <script>
      import "../scripts/slider.js";
    </script>
  </body>
</html>
<style>
      .banner-image {
        position: relative;
        width: 100%;
        height: 400px;
        overflow: hidden;
      }

      .banner-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }

      .banner-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 1;
      }

      .banner-text {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        color: white;
        text-align: center;
        z-index: 2;
      }

      .banner-text h1 {
        font-size: 2.5rem;
        margin-bottom: 0.5rem;
      }

      .banner-text p {
        font-size: 1.2rem;
      }
</style>