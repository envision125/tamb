            <div class="mySlides fade">
              <img src="torta.JPG" style="width: 100%;" />

              <div class="text">TORTAS AHOGADAS</div>
            </div>

            <div class="mySlides fade">
              <img src="huevos.jpg" style="width:100%" />

              <div class="text">PLATILLOS</div>
            </div>

            <div class="mySlides fade">
              <img src="trestacos.jpeg" style="width:100%" />

              <div class="text">CEVICHE</div>
            </div>
          </div>

