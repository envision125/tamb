---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
   
  </head>
  <body>
    <Header />
    <!-- IMG: Banner Section Content -->

    <div class="banner-image">
      <img src="bgimg.jpeg" alt="Background Image" />
    </div>
    <main>
      <h1>Tortas Ahogadas Mi Barrio</h1>
      <hr />
      <!-- <h2>Estilo Jalisco</h> -->
	<section>
		<!-- Menu Slideshow Section -->
		<h3>* Estilo Jalisco *</h3>
		<p>
			Have fun! If you get stuck, remember to <a
			  href="https://docs.astro.build/"
			  >read the docs
			</a> or <a href="https://astro.build/chat">join us on Discord</a> to ask
			questions.
		</p>
		<div>
			<h3>BEST IN TOWN!</h3>
		</div>


		
	</section>
     
	<section>
		<!-- REV Section -->
		<p>Here are a few ideas on how to get started with the template:</p>
		<ul>
		  <li>Edit this page in <code>src/pages/index.astro</code></li>
		  <li>
			Edit the site header items in <code>src/components/Header.astro</code>
		  </li>
		  <li>
			Add your name to the footer in <code>src/components/Footer.astro</code
			>
		  </li>
		 
		
		</ul>
		  
	
	</section>
     


    </main>

    <Footer />
  </body>
</html>
